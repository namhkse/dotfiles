{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": false,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#8dd006",
                    "background": "transparent",
                    "properties": {
                        "prefix": " ",
                        "postfix": "",
                        "style": "full",
                        "folder_separator_icon": "/"
                    }
                },
                {
                    "type": "poshgit",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#ffffff",
                    "background": "transparent",
                    "properties": {
                       "prefix": " ",
                       "postfix": ""

                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#0077c2",
                    "properties": {
                        "prefix": "",
                        "text": " \u276F"
                    }
                }
            ]
        }
    ]
}
