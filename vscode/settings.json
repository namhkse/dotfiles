{
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.suggestSelection": "first",
  "editor.fontFamily": "'Fira Code', 'Segoe UI Emoji'",

  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.preferredLightColorTheme": "Monokai",

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'Fira Code','MesloLGS NF', 'Segoe UI Emoji'",

  "breadcrumbs.enabled": false,
  "files.autoSave": "afterDelay",

  // Vim
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.easymotion": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["s", "h"],
      "after": ["<C-w>", "h"]
    },
    { 
      "before": ["s", "k"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["s", "l"],
      "after": ["<C-w>", "l"]
    },
    { 
      "before": ["s", "j"],
      "after": ["<C-w>", "j"]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false, // Ctrl-A = select all
    "<C-f>": false  // Ctrl-F = search
  },
  "tabnine.experimentalAutoImports": true
}
